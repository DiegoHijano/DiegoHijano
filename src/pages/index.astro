import ThirdPage from "../content.astro/Third-Page.astro";
import ContactPage from "../content.astro/Contact-page.astro";
import Header from "../content.astro/Header.astro";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/Icon.webp" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
